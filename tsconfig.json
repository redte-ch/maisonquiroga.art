{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "module": "nodenext",
    "noEmit": true,
    "paths": {
      ";/*": ["src/ui/assets/*"],
      "#/*": ["*"],
      "$/*": ["src/app/*"],
      "%/*": ["src/content/*"],
      "&/*": ["src/domain/*"],
      "+/*": ["src/infra/*"],
      "@/*": ["src/pages/*"],
      "^/*": ["src/ui/*"],
      "~/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "stripInternal": true,
    "target": "es6"
  },
  "include": [
    "./**/*.cjs",
    "./**/*.mjs",
    "./**/*.ts",
    "./**/*.d.ts",
    "./src/**/*.astro",
    "./src/**/*.svelte"
  ]
}
