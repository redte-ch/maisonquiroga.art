{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "module": "nodenext",
    "noEmit": true,
    "paths": {
      "!/*": ["src/assets/*"],
      "~/*": ["src/*"],
      "#/*": ["*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "stripInternal": true,
    "target": "es6"
  },
  "include": [
    "./**/*.cjs",
    "./**/*.mjs",
    "./**/*.ts",
    "./**/*.d.ts",
    "./src/**/*.astro",
    "./src/**/*.svelte"
  ]
}
