---
import Bio from '~/components/Bio.astro'
import Curriculum from '~/components/Curriculum.svelte'
import Home from '~/layouts/Home.astro'

import imgRoberto from '!/images/roberto.jpg'

const bio = {
  title: 'Biographie de Roberto Quiroga Valdovinos',
  text: `
        Né en 1953 à Viña del Mar, Chili, Roberto Quiroga Valdovinos a reçu
        sa formation d'art à l'Escuela de Bellas Artes de Viña del Mar en
        1970 et à l'Université de Concepción en 1973. Il a étudié sous la
        direction de Teresa Vidal, Ismael Pinto, Julio Escamez, Tole
        Peralta, Albino Echeverría, et Maisner Ordoñez. À la suite du
        sanglant coup d'État de 1973, il s'est vu contraint de quitter le
        pays pour emprunter le chemin de l'exil, ce qui a imprimé une
        marque décisive sur son œuvre. Aujourd'hui, il dirige la Galerie
        Lugar Inamible et expose ses travaux au Café Zeit.
    `,
  figure: {
    src: imgRoberto,
    alt: 'Roberto Quiroga Valdovinos',
    caption: 'Portrait de Roberto Quiroga Valdovinos en 2024 à Valparaíso'
  }
}

const cv = [
  {
    title: 'Expositions personnelles',
    items: [
      {
        year: 2024,
        text: `
          Exposition de peintures récentes. Acrylique sur toile. Café Zeit,
          Valparaíso.
        `
      },
      {
        year: 2015,
        text: `
          Exposition permanente. Acrylique sur toile, sérigraphie, gravure en
          métal, offset. Galerie Lugar Inamible, Valparaíso.
        `
      }
    ]
  },
  {
    title: 'Expositions collectives',
    items: [
      {
        year: 1978,
        text: `
          Performances culturelles et solidaires avec et en soutien des
          victimes de la dictature. Peinture, théâtre, guitare, chanson
          populaire. Santiago.
        `
      }
    ]
  },
  {
    title: 'Résidences',
    items: [
      {
        year: 2015,
        text: `
          Musée d'art contemporain de Valparaíso. Acrylique sur toile.
        `
      },
      {
        year: 2014,
        text: `
          Gravure. Taller de grabado Casaplan. Valparaíso.
        `
      }
    ]
  },
  {
    title: 'Interventions',
    items: [
      {
        year: 2015,
        text: `
          Gravure en métal, offset. Valparaíso.
        `
      },
      {
        year: 1990,
        text: `
          Sérigraphie, gravure. Valparaíso.
        `
      }
    ]
  },
  {
    title: 'Formation',
    items: [
      {
        year: 1990,
        text: `
          Guitare classique. Conservatoire de la Pontificia Universidad
          Católica. Valparaíso.
        `
      },
      {
        year: 1973,
        text: `
          Licence en art. Université de Concepción. Concepción.
        `
      },
      {
        year: 1970,
        text: `
          Dessin et peinture. Beaux-Arts. Viña del Mar.
        `
      }
    ]
  }
]
---

<Home profileImage={imgRoberto}>
  <Bio {...bio} />
  {cv.map(({ title, items }) => <Curriculum {title} {items} />)}
</Home>
