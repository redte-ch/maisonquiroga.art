---
import { Image } from 'astro:assets'

const { src, alt } = Astro.props
const width = 80
const height = 80
const densities = [1.5, 2, 4, 8]
---

<div class='Logo'>
  <Image
    class='Logo-img'
    src={src}
    alt={alt}
    width={width}
    height={height}
    densities={densities}
    loading='eager'
  />
</div>

<style>
  .Logo {
    @apply -mb-20;
  }
</style>
