---
import { Image } from 'astro:assets'
import { bioFigure } from './BioFigure'
---

<figure class='BioFigure'>
  <Image
    class='BioFigure-img'
    src={bioFigure.image.src}
    alt={bioFigure.image.alt}
    width={bioFigure.image.width}
    height={bioFigure.image.height}
    sizes={bioFigure.image.sizes}
    widths={bioFigure.image.widths}
    loading='eager'
  />
  <figcaption class='Bio-figure-figcaption'>{bioFigure.caption}</figcaption>
</figure>

<style>
  .BioFigure {
    @apply animate-fade-up-in;
    @apply block sm:inline-block;
    @apply w-full sm:w-1/2 md:w-1/3 lg:w-1/4;
    @apply mb-0 ml-auto mr-auto mt-0 sm:m-0;
    @apply pt-8 sm:pt-0.5;
    @apply max-w-80 sm:max-w-64 md:max-w-40 lg:max-w-32;
  }
</style>
